<!DOCTYPE html>
<html>
<head>
  <title>SquidRunner</title>
  <!--<title><%= full_title(yield(:title)) %></title>-->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
  <!-- Bootstrap Core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link href="css/agency.css" rel="stylesheet">
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">

  </script>
<![endif]-->

</head>
<body>
<span align="center" class="notice alert-success"><%= notice %>
  <span align="center" class="alert alert-info"><%= alert %></span>
</span>

<% if user_signed_in? %> <!--###########-->

<nav class="navbar navbar-fixed-top navbar-inverse">
<div class="container">

<nav>
	<ul class="nav navbar-nav navbar-left">
		<li><%= link_to "SquidRunner", welcome_index_path, id: "logo" %></li>
	</ul>
	<ul class="nav navbar-nav navbar-right">
		<li><%= link_to "Home",   controller: '/welcome'%></li>
    <li><%= link_to "Tutorial",   tutorial_path %></li>
		<li><%= link_to "Open Tasks", tasks_path %></li>
		<li><%= link_to "Create Task", new_task_path %></li>
    <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
		<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
	</ul>
</nav>
</div>
</nav>



<% else %> <!--###########-->
<nav class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
<nav>
<ul class="nav navbar-nav navbar-left">
		<li><a class="navbar-brand page-scroll" href="#page-top"><%= link_to "SquidRunner", controller: '/welcome', id: "logo", 'data-no-turbolink' => true %></a></li>
	</ul>
  <ul class="nav navbar-nav navbar-right">
    <li><%= link_to "Home",   controller: '/welcome' %></li>
    <li><%= link_to "Tutorial",   tutorial_path %></li>
    <li><%= link_to "Open Tasks", tasks_path %></li>
    <li><%= link_to "Sign up", new_user_registration_path %></li>
    <li><%= link_to "Login", new_user_session_path %></li>
  </ul>
</nav>
</div>
</nav>
<% end %>

<%= yield %>

</body>

<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <span class="copyright">Copyright &copy; SquidRunner 2015</span>
            </div>
            <div class="col-md-4">
              <span class="copyright"> Made with Love from Alex, Eddie, Zhengyang </span>
            </div>
            <div class="col-md-4">
                <ul class="list-inline quicklinks">
                    <li><a href="#">Privacy Policy</a>
                    </li>
                    <li><%= link_to 'Terms of Service', termsOfService_path%>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>

</html>
