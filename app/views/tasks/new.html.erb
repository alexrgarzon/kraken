<% provide(:title, 'New Task') %>
<h1>New Task</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :payment_description %>
      <%= f.text_field :payment_description %>

      <%= f.submit "Create my task", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', welcome_home_path %>
